{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx"] }],
        "react/prefer-stateless-functions": "off",
        "import/extensions": ["error", "never", { "packages": "always" }],
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "trailingComma": "all",
            "bracketSpacing": true,
            "jsxBracketSameLine": true
        }]
    }
}